<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/common_blue">

    <ImageButton
        android:id="@+id/bottom_left_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/bottom_bar_margin_left_right"
        android:layout_marginStart="@dimen/bottom_bar_margin_left_right"
        android:background="@drawable/common_back_bg"
        android:contentDescription="@string/app_name"/>

    <com.xiongdi.recognition.widget.AverageViewGroup.AverageLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/bottom_right_bt"
        android:layout_toRightOf="@+id/bottom_left_bt"
        android:gravity="center">

        <ImageButton
            android:id="@+id/bottom_first_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_take_photo"
            android:contentDescription="@string/app_name"/>

        <ImageButton
            android:id="@+id/bottom_second_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_passport_bg"
            android:contentDescription="@string/app_name"
            android:visibility="gone"/>

    </com.xiongdi.recognition.widget.AverageViewGroup.AverageLinearLayout>

    <ImageButton
        android:id="@+id/bottom_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/bottom_bar_margin_left_right"
        android:layout_marginRight="@dimen/bottom_bar_margin_left_right"
        android:background="@drawable/common_right_bg"
        android:contentDescription="@string/app_name"/>
</RelativeLayout>